<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-8">
      <div class="panel panel-default">
        <div >
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>title</th>
              <th>content</th>
              <th>comment count</th>
            </tr>
            </thead>
            <tbody>
            <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= link_to post.content[0..100], post_path(post) %></td>
                  <td><%= post.comments.count %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            info box
          </h3>
        </div>
        <div class="panel-body">
          <%= @user.username %>
        </div>
      </div>
    </div>
  </div>
</div>