<div class="row">
  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">post list</div>
      <div class="panel-body topics">
        <div class="topics-group">
          <% @posts.each do |post| %>
              <div class="topic media">
                <div class="avatar media-left">
                  <a href=<%= user_path(User.find_by(username: post.author)) %> >
                    <%= letter_avatar_tag Pinyin.t(post.author), 48, class: "av img-circle" %>
                  </a>
                </div>
                <div class="infos media-body">
                  <div class="title media-heading"> <%= link_to post.title, post_path(post) %> </div>
                  <div class="info">
                    <%= link_to post.author, user_path(User.find_by(username: post.author)), class: "user-name" %>
                    â€¢
                    create
                    <%= post.created_at %>
                  </div>
                </div>
                <div class="count media-right">
                  <% if post.comments.any? %>
                  <a class="state-false" href=<%= post_path(post)+'#comment-'+post.comments.last.id.to_s %>>
                    <%= post.comments.count %>
                  </a>
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <div class="panel-footer">
        <div>
          <%= will_paginate @posts, class: "pagination" %>
        </div>
      </div>
    </div>

  </div>
  <div class="col-lg-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to "new post", new_post_path, class: "btn btn-primary btn-block"%>
      </div>
    </div>
