<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Post List</h1>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <p> There are <%= @posts.count %> post </p>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>id</th>
        <th>author</th>
        <th>title</th>
        <th>content</th>
        <th>comment count</th>
        <th>delete</th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.author %></td>
            <td><%= post.title %></td>
            <td><%= link_to post.content[0..100], post_path(post) %></td>
            <td><%= post.comments.count %></td>
            <td><%= link_to "delete", post_path(post), method: :delete,
                            data: { confirm: "delete post?"} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div class="apple_pagination">
      <%= will_paginate @posts %>
    </div>
  </div>
</div>
