<%= form_for @post, html: {class: "form-horizontal", role: "form"}  do |f| %>
    <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <%= pluralize(@post.errors.count, 'error') %>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="col-lg-12">
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "title", disabled: (type=='edit')? true : nil %>
      </div>
    </div>
    <ul class="nav nav-tabs">
      <li class="active edit">
        <a href="#" data-toggle="tab">edit</a>
      </li>
      <li class="preview">
        <a href="#" data-toggle="tab">view</a>
      </li>
    </ul>

    <div class="col-lg-12">
      <div class="form-group">
        <%= f.text_area :content, id: 'page_body', class: 'form-control', style: 'height: 420px; display: block', placeholder: "content" %>
        <div id="preview" style="display: none">
          <div class="well well-lg">
            <p></p>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "save", class: 'btn btn-primary'%>
      </div>
    </div>
<% end %>
