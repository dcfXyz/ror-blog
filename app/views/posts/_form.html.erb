<%= form_for @post  do |f| %>

    <% if @post.errors.any? %>
        <div>
          <%= pluralize(@post.errors.count, 'error') %>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <strong><%= f.label :author, 'author' %></strong>
      <br/>
      <%= f.text_field :author %>
    </p>

    <p>
      <strong><%= f.label :title, 'title' %></strong>
      <br/>
      <%= f.text_field :title %>
    </p>

    <p>
      <strong><%= f.label :content, 'content' %></strong>
      <br/>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit "submit" %>
    </p>

<% end %>
