<div class="row">
  <div class="col-lg-12">

    <%= form_for([@post, @post.comments.build], html: {class: "form-horizontal", role: "form"}) do |f| %>
        <% unless session[:user_id] %>
          <div class="form-group">
            <%= f.label :commenter, "commenter", class: "col-lg-2 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :commenter, class: "form-control"%>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :body , "body", class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_area :body, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-2 col-lg-offset-2">
            <%= f.submit %>
          </div>
        </div>
    <% end %>

  </div>
</div>
